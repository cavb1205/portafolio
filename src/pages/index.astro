---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Skills from "../components/Skills.astro";
import Nav from "../components/Nav.astro";
---

<Layout title="Camilo Varon | Desarrollador Frontend">
  <Nav />
  <main class="min-h-screen px-4 md:px-6">
    <section id="inicio" class="py-8">
      <Header />
    </section>
    
    <section id="habilidades" class="py-8">
      <Skills />
    </section>
    
    <section id="proyectos" class="container mx-auto py-12">
      <div class="text-center mb-10">
        <h2 class="text-3xl font-bold text-primary mb-2">Mis Proyectos</h2>
        <p class="text-secondary">Explora algunos de mis trabajos recientes</p>
      </div>
      <div class="max-w-5xl mx-auto px-4">
        <p class="text-center text-gray-400">
          Próximamente mostraremos aquí tus proyectos
        </p>
      </div>
    </section>

    <section id="contacto" class="container mx-auto py-12">
      <div class="text-center mb-10">
        <h2 class="text-3xl font-bold text-primary mb-2">Contacto</h2>
        <p class="text-secondary">
          ¿Interesado en trabajar juntos? ¡Contáctame!
        </p>
      </div>
      <div class="max-w-md mx-auto grid place-items-center">
        <a
          href="mailto:ing.camilo.varon@gmail.com"
          class="flex items-center gap-2 text-accent hover:underline"
        >
          <i class="ri-mail-fill text-2xl"></i>
          <span>ing.camilo.varon@gmail.com</span>
        </a>
      </div>
    </section>
  </main>
</Layout>
